import tkinter as tk
def saludar():
    nombre = entrada_nombre.get()
    edad = entrada_edad.get()
    etiqueta_resultado.config(text=f"Hola {nombre}, tú tienes {edad} años")
ventana = tk.Tk()
ventana.title("Mi primera app grafica")
ventana.geometry("370x170")
ventana.configure(bg="#ADD8E6")
etiqueta1 = tk.Label(ventana, text="Ingresa tu nombre:", bg="#ADD8E6")
etiqueta1.pack()
entrada_nombre = tk.Entry(ventana)
entrada_nombre.pack()
etiqueta2 = tk.Label(ventana, text="Ingresa tu edad:", bg="#ADD8E6")
etiqueta2.pack()
entrada_edad = tk.Entry(ventana)
entrada_edad.pack()
boton = tk.Button(ventana, text="Mostrar saludo", command=saludar)
boton.pack()
etiqueta_resultado = tk.Label(ventana, text="", bg="#ADD8E6")
etiqueta_resultado.pack()
etiqueta_autor = tk.Label(ventana, text="Hecho por Acoltzi Mejia Emiliano", bg="#ADD8E6", fg="gray")
etiqueta_autor.pack(pady=10)
ventana.mainloop()
